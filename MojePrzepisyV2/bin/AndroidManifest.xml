<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mojeprzepisy.aplikacja"
    android:versionCode="19"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.mojeprzepisy.aplikacja.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mojeprzepisy.aplikacja.NajwyzejOceniane"
            android:label="@string/title_activity_najwyzej_oceniane" >
        </activity>
        <activity
            android:name="com.mojeprzepisy.aplikacja.OstatnioDodane"
            android:label="@string/title_activity_ostatnio_dodane" >
        </activity>
        <activity
            android:name="com.mojeprzepisy.aplikacja.przepis.Przepis"
            android:label="@string/title_activity_przepis" >
        </activity>
        <activity
            android:name="com.mojeprzepisy.aplikacja.dodaj_przepis.DodajPrzepisActivity"
            android:label="@string/title_activity_dodaj_przepis" >
        </activity>
        <activity
            android:name="com.mojeprzepisy.aplikacja.wyswietl_przepis.WyswietlPrzepis"
            android:label="@string/title_activity_wyswietl_przepis" >
        </activity>
    </application>

</manifest>
