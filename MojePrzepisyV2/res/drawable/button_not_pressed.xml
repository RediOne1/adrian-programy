<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/tab_unselected" />

            <corners android:radius="7dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <padding
                android:left="-5dp"
                android:right="-5dp"
                android:top="-5dp"
                android:bottom="-5dp" />

            <gradient
                android:angle="270"
                android:endColor="#fda431"
                android:startColor="#fff799" />

            <corners android:radius="7dp" />
        </shape>
    </item>

</layer-list>