<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opis" />

     <LinearLayout
        android:id="@+id/tytul_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:orientation="vertical" >

    </LinearLayout>

    <Button
        android:id="@+id/dodaj_opis_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tytul_linearlayout"
        android:background="@drawable/button_indicator"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:text="@string/nastepny_krok"
        android:textSize="20sp" />

</RelativeLayout>