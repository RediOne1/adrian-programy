<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/przepis_list_bg2"
    tools:context=".PrzepisActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dodano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="dodano:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/dodano"
                android:text="autor:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/zdjecie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/autor"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher" />

            <RatingBar
                android:id="@+id/ratingBar1"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zdjecie"
                android:layout_marginTop="1dp"
                android:stepSize="0.05" />

            <TextView
                android:id="@+id/iloscOcen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zdjecie"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/ratingBar1"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/sredniaOcena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ratingBar1"
                android:text="Ocena: 0"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/kodPrzepisu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/sredniaOcena"
                android:layout_marginTop="3dp"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/kategoriaPrzepis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/zdjecie"
                android:text="Kategoria:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/trudnosc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kategoriaPrzepis"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/czas"
                android:text="Bardzo łatwy"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/czas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/kategoriaPrzepis"
                android:text="1-15min"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16dp" />

            <RelativeLayout
                android:id="@+id/OcenRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kodPrzepisu"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background3" >

                <TextView
                    android:id="@+id/twoja_ocena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:text="Oceń przepis"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20dp" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    style="@android:style/Widget.Holo.Light.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:stepSize="0.5" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tytul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/OcenRelativeLayout"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/pusty"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/skladniki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tytul"
                android:background="@drawable/background3"
                android:text="@string/skladniki"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/skladniki"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/OpisTytul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:background="@drawable/background3"
                android:text="@string/opis"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Opis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/OpisTytul"
                android:text="@string/pusty"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/addFavourite"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/heart_bw" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>